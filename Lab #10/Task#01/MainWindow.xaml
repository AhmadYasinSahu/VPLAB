<Window 
    x:Class="Task01.BringBackPocoyo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Bring Back Pocoyo" 
    Width="400" 
    Height="300" 
    WindowStartupLocation="CenterScreen">

    <Border BorderBrush="Black" BorderThickness="2" Margin="10">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image x:Name="Image1" Width="100" Height="100" Margin="5"/>
            <Image x:Name="Image2" Width="100" Height="100" Margin="5"/>
            <Image x:Name="Image3" Width="100" Height="100" Margin="5"/>
        </StackPanel>
    </Border>
</Window>