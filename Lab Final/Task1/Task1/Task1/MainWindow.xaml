<Window x:Class="Task1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}">
        <DataGrid x:Name="datagrid"  Margin="240,12,21,205" FontWeight="Bold" Background="{DynamicResource {x:Static SystemColors.GradientActiveCaptionBrushKey}}"/>
        <Button x:Name="insert_btn" Content="Add" HorizontalAlignment="Left" Margin="62,367,0,0" VerticalAlignment="Top" Height="47" Width="120" Click="insert_btn_Click" Background="{DynamicResource {x:Static SystemColors.HotTrackBrushKey}}" FontWeight="Bold">
            <Button.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Button.BorderBrush>
        </Button>
        <Button x:Name="edit_btn" Content="Edit" HorizontalAlignment="Left" Margin="262,367,0,0" VerticalAlignment="Top" Height="47" Width="120" Background="{DynamicResource {x:Static SystemColors.HotTrackBrushKey}}" FontWeight="Bold">
            <Button.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Button.BorderBrush>
        </Button>
        <Button x:Name="delete_btn" Content="Delete" HorizontalAlignment="Left" Margin="450,367,0,0" VerticalAlignment="Top" Height="47" Width="120" Background="{DynamicResource {x:Static SystemColors.HotTrackBrushKey}}" FontWeight="Bold">
            <Button.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Button.BorderBrush>
        </Button>
        <Button x:Name="clear_btn" Content="Clear" HorizontalAlignment="Left" Margin="642,367,0,0" VerticalAlignment="Top" Height="47" Width="120" Click="clear_btn_Click" Background="{DynamicResource {x:Static SystemColors.HotTrackBrushKey}}" FontWeight="Bold">
            <Button.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Button.BorderBrush>
        </Button>
        <Label Content="Name" HorizontalAlignment="Left" Margin="7,29,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label Content="Grade" HorizontalAlignment="Left" Margin="7,73,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label Content="Subject" HorizontalAlignment="Left" Margin="7,124,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label Content="Marks" HorizontalAlignment="Left" Margin="7,168,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label Content="Attenance" HorizontalAlignment="Left" Margin="7,216,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBox x:Name="name_txt"  HorizontalAlignment="Left" Margin="100,37,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}"/>
        <TextBox x:Name="grade_txt" HorizontalAlignment="Left" Margin="100,81,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Background="{DynamicResource {x:Static SystemColors.GradientActiveCaptionBrushKey}}"/>
        <TextBox x:Name="subject_txt" HorizontalAlignment="Left" Margin="100,128,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Background="{DynamicResource {x:Static SystemColors.GradientActiveCaptionBrushKey}}"/>
        <TextBox x:Name="marks_txt" HorizontalAlignment="Left" Margin="100,172,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Background="{DynamicResource {x:Static SystemColors.GradientActiveCaptionBrushKey}}"/>
        <TextBox x:Name="attendance_txt" HorizontalAlignment="Left" Margin="100,224,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Background="{DynamicResource {x:Static SystemColors.GradientActiveCaptionBrushKey}}"/>
        <Label Content="ID" HorizontalAlignment="Left" Margin="296,320,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="id_txt" HorizontalAlignment="Left" Margin="390,328,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Background="{DynamicResource {x:Static SystemColors.GradientActiveCaptionBrushKey}}"/>
        <ComboBox HorizontalAlignment="Left" Margin="100,266,0,0" VerticalAlignment="Top" Width="120" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}"/>
        <Label Content="Category" HorizontalAlignment="Left" Margin="7,264,0,0" VerticalAlignment="Top" FontWeight="Bold"/>

    </Grid>
</Window>
